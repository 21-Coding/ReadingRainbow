<h1>Reading Rainbow</h1>
<h2>TAKE A LOOK, IT'S IN A BOOK</h2>
<h3>(a reading rainbooooooooooooowww)</h3>

<h3>Available Books</h3>

<% if @books.any? %>
<ul>
  <% @books.each do |book| %>
    <li><a href="/books/<%= book.id %>"><%= book.name %></a></li>
  <% end %>
</ul>
<% else %>
<p>There are currently no books to display, wah wah.</p>
<% end %>

<a href="/books/new">Add a new book</a>

<form action="/books" method="get">
  <div class="form-group">
    <label for="search">Search</label>
    <input id="search" name="search" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>

<form action="/books" method="get">
  <button type="submit" name="sort" class="btn">Sort!</button>
</form>


<h3>Available Authors</h3>

<% if @authors.any? %>
<ul>
  <% @authors.each do |author| %>
    <li><a href="/authors/<%= author.id %>"><%= author.name %></a></li>
  <% end %>
</ul>
<% else %>
<p>There are currently no authors to display.</p>
<% end %>

<a href="/authors/new">Add a new author</a>

<form action="/authors" method="get">
  <div class="form-group">
    <label for="search">Search</label>
    <input id="search" name="search" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>

<form action="/authors" method="get">
  <button type="submit" name="sort" class="btn">Sort!</button>
</form>
