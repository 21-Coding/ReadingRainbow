<h1>READING rainbooooooooooooowww</h1>

<h3>Available Authors</h3>

<% if @authors.any? %>
<ul>
  <% @authors.each do |author| %>
    <li><a href="/authors/<%= author.id %>"><%= author.name %></a></li>
  <% end %>
</ul>
<% else %>
<p>There are currently no authors to display.</p>
<% end %>

<a href="/authors/new">Add a new author</a>

<form action="/authors" method="get">
  <div class="form-group">
    <label for="search">Search</label>
    <input id="search" name="search" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>

<form action="/authors" method="get">
  <button type="submit" name="sort" class="btn">Sort!</button>
</form>
